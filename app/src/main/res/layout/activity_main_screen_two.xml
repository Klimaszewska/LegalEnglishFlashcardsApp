<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jusjar.legalenglishflashcardsapp.MainActivityScreenTwo">

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:textSize="16sp"
        android:text="Chose your learning method:" />

    <Button
        android:id="@+id/buttonPairMatching"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Pair matching"
        android:layout_gravity="center"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"/>

    <Button
        android:id="@+id/buttonFlashcardsPl"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Flashcards Polish -> English"
        android:layout_gravity="center"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"/>

    <Button
        android:id="@+id/buttonFlashcardsEn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Flashcards English -> Polish"
        android:layout_gravity="center"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"/>

</LinearLayout>
