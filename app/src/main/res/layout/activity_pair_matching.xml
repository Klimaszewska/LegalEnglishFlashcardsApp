<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.jusjar.legalenglishflashcardsapp.PairMatchingActivity">

    <TextView
        android:id="@+id/methodAndMode"
        android:text="Civil Law"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/questionsTotal"
        android:text="Questions: 0/10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/intro"
        android:text="Tap the screen to match the correct word pairs: "
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center" />


    <LinearLayout
        android:id = "@+id/buttons_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/left_buttons"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:gravity="center"
            android:animateLayoutChanges="true">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_buttons"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:gravity="center"
            android:animateLayoutChanges="true">
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
