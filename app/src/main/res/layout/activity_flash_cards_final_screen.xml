<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.jusjar.legalenglishflashcardsapp.FlashCardsFinalScreenActivity">

    <TextView
        android:id="@+id/methodAndMode"
        android:text="Civil Law, Flashcards mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/questionsTotal"
        android:text="Questions: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/numberCorrect"
        android:text="Correct: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/numberNotSure"
        android:text="Not sure: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/numberWrong"
        android:text="Wrong: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/wellDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:text="Well done!"
        android:textColor="#43A047"/>

    <Button
        android:id="@+id/buttonRetry"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Retry"
        style="@style/buttonBasic"
        />

    <Button
        android:id="@+id/buttonMainMenu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        style="@style/buttonBasic"/>

</LinearLayout>
